            //        "useFiles": true,
            //        "asm": "sjasmplus",
            //        "mainFile": "drivers/UsbKeyboard/src/main.asm"
            //    }
            //],
            "openmsx": {
                "pcInSlot": "1 X 14" // nextor driver (rookie mapper)
                //"pcInSlot": "3 2 28" // usbether in 512kb mapper
            },
            "commandsAfterLaunch": [
                "-e openmsx_info version"
            ],
            "resetOnLaunch": false,
            "rootFolder": "${workspaceFolder}",
            "tmpDir": ".tmp"
        },
        {
            "name": "NXT - Launch MacOS",
