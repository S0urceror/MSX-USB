            "request": "launch",
            "program": "../Emulators/openMSX/derived/openmsx",
            "args": ["-machine", "Philips_NMS_8250_NXT", "-diska", "${workspaceFolder}/software/dist","-setting", "${workspaceFolder}/openmsx.xml","-script","openmsx.tcl"],
